{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",

    // Module Resolution
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    // Path Aliases (matches vitest.config.ts)
    "baseUrl": ".",
    "paths": {
      "@/*": ["./docs/.vitepress/*"]
    },

    // Strict Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,

    // Emit Configuration
    // "declaration": true,  // Commented as this is not a library
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Vue 3 Support
    "types": ["vite/client", "vitest/globals"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["docs/**/*.ts", "docs/**/*.tsx", "docs/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist", ".vitepress/cache", ".vitepress/dist"],
  "vueCompilerOptions": {
    "experimentalRfc8649": true
  }
}
